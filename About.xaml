<Window x:Name="AboutWindow" x:Class="hTunes.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hTunes"
        mc:Ignorable="d"
        Title="About" Height="200" Width="300" Icon="icon.ico" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="hTunesLabel" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="25" FontFamily="Arial" FontWeight="Bold" Foreground="#FF0F53A1" >hTunes</Label>
        <Label x:Name="Version_Label" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">Version 1.0</Label>
        <Label x:Name="createdByLable" Grid.Row="2" FontSize="11" HorizontalAlignment="Center">Created By: Riley Judd, Hyhway Therrell and Caleb Rudder</Label>
        <Button x:Name="Ok_Button" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Click="Ok_Button_Click">OK</Button>
    </Grid>
</Window>
