<Window x:Name="musicPlayerWindow" x:Class="hTunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hTunes"
        mc:Ignorable="d"
        Title="hTunes" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="playlistList" HorizontalAlignment="Left" Height="341" Margin="10,58,0,0" VerticalAlignment="Top" Width="159"/>
        <DataGrid x:Name="songList" HorizontalAlignment="Left" Height="289" Margin="203,58,0,0" VerticalAlignment="Top" Width="582" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title">

                </DataGridTextColumn>
                <DataGridTextColumn Header="Artist">

                </DataGridTextColumn>
                <DataGridTextColumn Header="Album">

                </DataGridTextColumn>
                <DataGridTextColumn Header="Genre">

                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="playButton" Content="Play" HorizontalAlignment="Left" Height="27" Margin="203,372,0,0" VerticalAlignment="Top" Width="146"/>
        <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Height="27" Margin="379,372,0,0" VerticalAlignment="Top" Width="146"/>
        <ToolBar HorizontalAlignment="Left" Height="41" Margin="10,12,0,0" VerticalAlignment="Top" Width="775">
            <Button Content="Add Song"/>
            <Button Content="Add Playlist"/>
            <Button Content="About"/>
        </ToolBar>

    </Grid>
</Window>
